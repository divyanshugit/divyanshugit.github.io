---
layout: base.njk
---

<div class="container">
    <div class="page-layout">
        {% if pageTitle or subtitle %}
        <div class="page-header">
            {% if pageTitle %}
            <h1>{{ pageTitle }}</h1>
            {% endif %}
            {% if subtitle %}
            <p class="page-subtitle">{{ subtitle }}</p>
            {% endif %}
        </div>
        {% endif %}

        {{ content | safe }}
    </div>
</div>

{% if scripts %}
    {% for script in scripts %}
    <script src="{{ script }}"></script>
    {% endfor %}
{% endif %}

