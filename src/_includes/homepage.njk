---
layout: base.njk
---

<div class="container">
    <div class="main-layout">
        <div class="profile-column">
            <div class="profile-content">
                <picture>
                    <source type="image/avif" srcset="/assets/optimized/pic-200w.avif 200w, /assets/optimized/pic-400w.avif 400w" sizes="200px">
                    <source type="image/webp" srcset="/assets/optimized/pic-200w.webp 200w, /assets/optimized/pic-400w.webp 400w" sizes="200px">
                    <img src="/assets/optimized/pic-400w.jpeg" alt="{{ name }}" class="profile-image" width="200" height="200" loading="eager">
                </picture>
                <h1 class="name"><i>{{ name }}</i></h1>
                <p class="title">{{ jobTitle }}<br>{{ organization }}</p>

                <div class="contact-info">
                    <p>{{ email }}</p>
                    <div class="links">
                        {% for link in socialLinks %}
                            <a href="{{ link.url }}">{{ link.text }}</a>{% if not loop.last %} / {% endif %}
                        {% endfor %}
                    </div>
                </div>

                {% if phdNote %}
                <div class="phd-note">
                    {{ phdNote | safe }}
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Right Column - Content -->
        <div class="content-column">
            <!-- Header Name -->
            <div class="content-header">
                <h1 class="content-name"><i>{{ name }}</i></h1>
                <p class="content-title">{{ jobTitle }}, {{ organization }}</p>
            </div>

            <!-- About Section -->
            <div class="section">
                {{ content | safe }}
            </div>

            <!-- News Section -->
            <div class="section">
                <h2>News</h2>
                <div class="news-list" id="recent-news">
                    <!-- News will be dynamically loaded here -->
                </div>
            </div>

            <!-- Publications Section -->
            <div class="section">
                <h2>Selected Publications</h2>
                <div id="featured-publications">
                    <!-- Publications will be dynamically loaded here -->
                </div>
                <div class="view-all">
                    <a href="/publications.html">See all publications</a>
                </div>
            </div>

            <!-- Research Projects -->
            <div class="section">
                <h2>Research Projects</h2>
                <div id="featured-projects">
                    <!-- Projects will be dynamically loaded here -->
                </div>
                <div class="view-all">
                    <a href="/projects.html">See all projects</a>
                </div>
            </div>

            <!-- Featured Blog Posts -->
            <div class="section">
                <h2>Recent Blog Posts</h2>
                <div id="featured-blog-posts">
                    <!-- Blog posts will be dynamically loaded here -->
                </div>
                <div class="view-all">
                    <a href="/blog.html">See all blog posts</a>
                </div>
            </div>

            <!-- Miscellaneous -->
            {% if miscellaneous %}
            <div class="section">
                <h2>Miscellaneous</h2>
                {{ miscellaneous | safe }}
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script src="{{ '/data/publications.js' | cacheBust }}"></script>
<script src="{{ '/data/projects.js' | cacheBust }}"></script>
<script src="{{ '/data/news.js' | cacheBust }}"></script>
<script src="{{ '/data/blog.js' | cacheBust }}"></script>
<script src="{{ '/js/homepage.js' | cacheBust }}"></script>
<script src="{{ '/js/scroll-header.js' | cacheBust }}"></script>

