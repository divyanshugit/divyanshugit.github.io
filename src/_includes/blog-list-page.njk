---
layout: base.njk
---

<div class="container">
    <div class="page-layout">
        <div class="page-header">
            <h1>{{ pageTitle }}</h1>
            <p class="page-subtitle">{{ subtitle }}</p>
        </div>

        <!-- Filter Options -->
        <div class="filter-section">
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">All Posts</button>
                <button class="filter-btn" data-filter="featured">Featured</button>
                {% for tag in filterTags %}
                <button class="filter-btn" data-filter="{{ tag }}">{{ tag }}</button>
                {% endfor %}
            </div>
            <div class="sort-options">
                <label for="sort-select">Sort by:</label>
                <select id="sort-select">
                    <option value="date-desc">Date (Newest First)</option>
                    <option value="date-asc">Date (Oldest First)</option>
                    <option value="title">Title</option>
                </select>
            </div>
        </div>

        <!-- Blog Posts Container -->
        <div class="blog-posts-container" id="blogPostsContainer">
            {% for post in collections.blog %}
            <div class="blog-post-item {{ 'featured' if post.data.featured }}" 
                 data-tags="{{ post.data.tags | join(',') }}" 
                 data-category="{{ post.data.tags[0] if post.data.tags }}"
                 data-featured="{{ post.data.featured }}" 
                 data-date="{{ post.data.date }}">
                <div class="blog-post-header">
                    <div class="blog-post-meta">
                        <span class="blog-post-date">{{ post.data.date | readableDate }}</span>
                        {% if post.data.tags %}
                        <span class="blog-post-category">{{ post.data.tags[0] }}</span>
                        {% endif %}
                        <span class="blog-post-read-time">{{ post.templateContent | readingTime }}</span>
                    </div>
                    <div class="blog-post-badges">
                        {% if post.data.featured %}
                        <span class="badge featured-badge">FEATURED</span>
                        {% endif %}
                    </div>
                </div>
                
                <h3 class="blog-post-title">{{ post.data.title }}</h3>
                
                <p class="blog-post-excerpt">
                    {{ post.data.description or (post.templateContent | excerpt) }}
                </p>
                
                {% if post.data.tags %}
                <div class="blog-post-tags">
                    {% for tag in post.data.tags %}
                    <span class="tag">{{ tag }}</span>
                    {% endfor %}
                </div>
                {% endif %}
                
                <div class="blog-post-actions">
                    <a href="{{ post.url }}" class="btn-secondary">Read Full Post</a>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Blog Series Section -->
        <div class="blog-series-section">
            <h3>Blog Series</h3>
            <div class="series-container" id="seriesContainer">
                <!-- Series will be dynamically generated -->
            </div>
        </div>

        <!-- Tags Cloud -->
        <div class="blog-tags-section">
            <h3>Topics</h3>
            <div class="tags-cloud" id="blogTagsCloud">
                <!-- Tags will be dynamically generated -->
            </div>
        </div>

        <!-- Archive Section -->
        <div class="blog-archive-section">
            <h3>Archive</h3>
            <div class="archive-container" id="archiveContainer">
                <!-- Archive will be dynamically generated -->
            </div>
        </div>

        {{ content | safe }}
    </div>
</div>

<!-- Modal for Quick Preview -->
<div id="modalOverlay" class="modal-overlay">
    <div class="modal-content">
        <button id="modalClose" class="modal-close">&times;</button>
        <h2 id="modalTitle"></h2>
        <div id="modalMeta"></div>
        <p id="modalExcerpt"></p>
        <div id="modalTags"></div>
        <div id="modalSeries"></div>
        <div id="modalLinks"></div>
    </div>
</div>

<script src="/js/blog-page-simple.js"></script>

