---
layout: base.njk
---

<div class="container">
    <div class="page-layout">
        <div class="page-header">
            <h1>{{ pageTitle }}</h1>
            <p class="page-subtitle">{{ subtitle }}</p>
        </div>

        <!-- Filter Options -->
        <div class="filter-section">
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">All Posts</button>
                <button class="filter-btn" data-filter="featured">Featured</button>
                {% for tag in filterTags %}
                <button class="filter-btn" data-filter="{{ tag }}">{{ tag }}</button>
                {% endfor %}
            </div>
            <div class="sort-options">
                <label for="sort-select">Sort by:</label>
                <select id="sort-select">
                    <option value="date-desc">Date (Newest First)</option>
                    <option value="date-asc">Date (Oldest First)</option>
                    <option value="title">Title</option>
                </select>
            </div>
        </div>

        <!-- Blog Posts Container -->
        <div class="blog-posts-container" id="blogPostsContainer">
            <!-- Blog posts will be dynamically loaded here -->
        </div>

        <!-- Blog Series Section -->
        <div class="blog-series-section">
            <h3>Blog Series</h3>
            <div class="series-container" id="seriesContainer">
                <!-- Series will be dynamically generated -->
            </div>
        </div>

        <!-- Tags Cloud -->
        <div class="blog-tags-section">
            <h3>Topics</h3>
            <div class="tags-cloud" id="blogTagsCloud">
                <!-- Tags will be dynamically generated -->
            </div>
        </div>

        <!-- Archive Section -->
        <div class="blog-archive-section">
            <h3>Archive</h3>
            <div class="archive-container" id="archiveContainer">
                <!-- Archive will be dynamically generated -->
            </div>
        </div>

        {{ content | safe }}
    </div>
</div>

<!-- Modal for Quick Preview -->
<div id="modalOverlay" class="modal-overlay">
    <div class="modal-content">
        <button id="modalClose" class="modal-close">&times;</button>
        <h2 id="modalTitle"></h2>
        <div id="modalMeta"></div>
        <p id="modalExcerpt"></p>
        <div id="modalTags"></div>
        <div id="modalSeries"></div>
        <div id="modalLinks"></div>
    </div>
</div>

<script src="/data/blog.js"></script>
<script src="/js/blog-page.js"></script>

